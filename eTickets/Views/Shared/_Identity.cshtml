@using Microsoft.AspNetCore.Identity;
@inject UserManager<ApplicationUser> usermansger;

    @if(!User.Identity.IsAuthenticated)
    {
        <a class="btn btn-outline-success my-2 my-sm-0" style="margin-right:10px" asp-controller="Account" asp-action="Login">
            <i class="bi bi-box-arrow-in-right"></i>  Log in
        </a>
        <a class="btn btn-outline-primary my-2 my-sm-0" style="margin-right:10px" asp-controller="Account" asp-action="Register">
            <i class="bi bi-person-plus"></i>  Register
        </a>

    }
    else
    {
        <form asp-action="Logout" asp-controller="Account">
            <button class="btn btn-outline-danger my-2 my-sm-0" style="margin-right:10px">
                <i class="bi bi-box-arrow-in-right"></i> Log out
            </button>
        </form>

        <div class="dropdown">
            <button class="btn btn-outline-secondary dropdown-toggle" style="margin-right:10px" type="button" id="profile-btn" data-toggle="dropdown">
                <i class="bi bi-person-badge"></i> Hello @usermansger.GetUserName(User)
            </button>
            <ul class="dropdown-menu " aria-labelledby="profile-btn">
                <li>
                    <a class="dropdown-item " asp-action="Index" asp-controller="Orders">
                        <i class="bi bi-list-check"></i> Orders
                    </a>
                    @if(User.IsInRole("Admin"))
                    {
                    <a class="dropdown-item" asp-action="Users" asp-controller="Account">
                        <i class="bi bi-list"></i> Users
                    </a>
                    }
                </li>
            </ul>
        </div>
    }






