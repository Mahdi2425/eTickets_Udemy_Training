@model Actor
@{
    ViewData["Title"] = "Update an actor";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1 class="text-center">Update @Model.FullName</h1>
        </p>
        @if (Model != null)
        {
            <div class="row">
                <div class="col-md-8 offset-2">
                    <hr style="margin-left:20px" />
                    <form asp-action="Update" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-check text-center">
                            <img id="ProfilePicturePreview" class="border_info rounded-circle" style="max-width:150px" />
                        </div>
                        <div class="form-check">
                            <label asp-for="PictureProfileURL"></label>
                            <input asp-for="PictureProfileURL" type="text" class="form-control" id="ImageURLInput" placeholder="Enter an ImageURL" />
                            <span asp-validation-for="PictureProfileURL" class="text-danger"></span>
                        </div>
                        <div class="form-check">
                            <label asp-for="FullName"></label>
                            <input asp-for="FullName" type="text" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="form-check">
                            <label asp-for="Bio"></label>
                            <input asp-for="Bio" type="text" class="form-control" />
                            <span asp-validation-for="Bio" class="text-danger"></span>
                        </div>
                        <hr style="margin-left:20px" />
                        <div>
                            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <input type="submit" name="Updating" value="Update" class="btn btn-outline-success float-end" />
                            }
                            <a asp-action="Index" class="btn btn-outline-secondary" style="margin-left:20px">Show all</a>
                        </div>
                    </form>
                </div>
            </div>
        }
    </div>
</div>
@section Scripts
{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $('#ImageURLInput').val();
        });
    </script>
}




