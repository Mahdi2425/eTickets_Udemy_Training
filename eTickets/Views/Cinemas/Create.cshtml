@model Cinema
@{
    ViewData["Title"] = "Adding a Cinema";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1 class="text-center">Add a new Cinema</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <hr style="margin-left:20px" />
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-check text-center">
                        <img id="ProfilePicturePreview" class="border_info rounded-circle" style="max-width:150px" />
                    </div>
                    <div class="form-check">
                        <label asp-for="CinemaLogoURL"></label>
                        <input asp-for="CinemaLogoURL" type="text" class="form-control" id="ImageURLInput" placeholder="Enter an ImageURL" />
                        <span asp-validation-for="CinemaLogoURL" class="text-danger"></span>
                    </div>
                    <div class="form-check">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" type="text" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-check">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" type="text" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <hr style="margin-left:20px" />
                    <div>
                        <input type="submit" name="Create&Add" value="Add" class="btn btn-outline-success float-end" />
                        <a asp-action="Index" class="btn btn-outline-secondary" style="margin-left:20px">Show all</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#ImageURLInput").on("change", function () {
                var output = document.getElementById('ProfilePicturePreview');
                var imageUrl = $(this).val();
                output.src = imageUrl;
            });
        });
    </script>
}