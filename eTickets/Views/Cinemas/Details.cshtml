@model Cinema

@{
    ViewData["Title"] = "Cinema Details";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1 class="text-center">Details for @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <hr style="margin-left:20px" />
                <div class="form-check text-center">
                    <img id="ProfilePicturePreview" class="border_info rounded-circle" style="max-width:150px" />
                </div>
                <div class="form-check">
                    <label asp-for="CinemaLogoURL"></label>
                    <input asp-for="CinemaLogoURL" type="text" class="form-control" id="ImageURLInput" readonly />
                    <span asp-validation-for="CinemaLogoURL" class="text-danger"></span>
                </div>
                <div class="form-check">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" type="text" class="form-control" readonly />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-check">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" type="text" class="form-control" readonly />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <hr style="margin-left:20px" />
                <div>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <a asp-action="Update" asp-controller="Cinemas" asp-route-id="@Model.Id" class="btn btn-outline-primary float-end">Update</a>
                    }
                    <a asp-action="index" class="btn btn-outline-secondary" style="margin-left:20px">Show all</a>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $('#ImageURLInput').val();
        });
    </script>
}

